@using Common.DTO
<div class="card mb-3" style="max-width: 840px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Event.image" class="img-fluid rounded-start img-size" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body d-flex flex-column justify-content-between h-100">
                <div>
                    <h5 class="card-title">@Event.title</h5>
                    <p class="card-text">@Event.description</p>
                    <p class="card-text text-end" style="font-weight: bold; margin-bottom: 20px;">@Event.date</p>
                </div>
                <div class="mb-3">
                    <button class="align-bottom align-content-end bottomright btn btn-primary">Boka biljett</button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public EventDTO Event { get; set; }

    public string image { get; set; } = "https://teamvasastorage.blob.core.windows.net/images/eventimage-twostiffs_excited_and_happy_pacman_and_ghosts_playing_arcade_ga_3c7ba5a9-dbce-4998-86dc-f44582c29177-2.png";
    public string title { get; set; } = "RETRO GAMING NIGHT: TA EN TIDSRESA GENOM SPELENS HISTORIA";
    public string description { get; set; } = "Återupplev nostalgin med klassiska spel från förr! Från Atari till Nintendo 64, vi har allt du behöver för en kväll full av minnen och skratt. Ta med dig dina vänner och upptäck varför de gamla godingarna fortfarande är tidlösa.";
    public string date { get; set; } = "2024-04-26";
}